@model IEnumerable<reviel.Models.Product>

@{
    Layout = "_AdminLayout"; // Admin paneli için yeni layout'u kullan
    ViewData["Title"] = "Ürünleri Görüntüle";
}

<h2>Ürünler</h2>

<p>
    <a asp-action="AddProduct" class="btn btn-primary">Yeni Ürün Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Benefits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KeyIngredients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Benefits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeyIngredients)
            </td>
            <td>
                <a asp-action="EditProduct" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="DeleteProduct" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>