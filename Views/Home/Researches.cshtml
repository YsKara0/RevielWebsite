@model IEnumerable<reviel.Models.Research>

@{
    ViewData["Title"] = "Araştırmalar";
}

<link rel="stylesheet" href="~/css/researches.css" />

<div class="container mt-5 research-container">
    <div class="text-center">
        <h1>Bilimsel Araştırmalar</h1>
        <p>Reviel'in formülünün arkasındaki bilimsel araştırmalar ve klinik çalışmalar.</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz herhangi bir araştırma eklenmemiş.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var research in Model)
            {
                <div class="col">
                    <div class="card research-card">
                        <div class="card-body">
                            <h5 class="card-title">@research.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                @research.PublicationDate.ToShortDateString() 
                                @(string.IsNullOrEmpty(research.Author) ? "" : $"| {research.Author}")
                            </h6>
                            <p class="card-text">@research.Summary</p>
                            <div class="d-grid gap-2">
                                <a href="@research.PdfUrl" target="_blank" class="btn btn-primary">
                                    <i class="fas fa-file-pdf"></i> Araştırmayı Görüntüle
                                </a>
                            </div>
                        </div>
                    </div>                </div>
            }
        </div>
    }
</div>
